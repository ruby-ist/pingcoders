<div class="sign-in-wrapper">
	<div class="ui raised segments sign-in-box">
		<div class="ui very padded text segment">
			<h2 class="ui blue large centered header">Sign up</h2>
			<div class="ui divider"></div>
			<br/>
			
			<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= render "users/shared/error_messages", resource: resource %>
				
				<div class="field">
					<%= f.label :email %><br/>
					<div class="ui input"><%= f.email_field :email, autofocus: true, autocomplete: "off" %></div>
				</div>
				<br/>
				
				<div class="field">
					<%= f.label :password %>
					<% if @minimum_password_length %>
						<em>(<%= @minimum_password_length %> characters minimum)</em>
					<% end %><br/>
					<div class="ui input"><%= f.password_field :password, autocomplete: "new-password" %></div>
				</div>
				<br/>
				
				<div class="field">
					<%= f.label :password_confirmation %><br/>
					<div class="ui input"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
				</div>
				<br/>
				<br/>
				
				<div class="actions">
					<%= f.submit "Sign up", class: "ui secondary button"%>
				</div>
			<% end %>
		</div>
		
		<div class="ui secondary segment">
			<%= render "users/shared/links" %>
		</div>
	</div>
</div>