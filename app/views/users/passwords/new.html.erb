<div class="sign-in-wrapper">
	<div class="ui raised segments sign-in-box">
		<div class="ui very padded text segment">
			<h2 class="ui blue large centered header">Forgot your password?</h2>
			<div class="ui divider"></div>
			<br/>
			
			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
				<%= render "users/shared/error_messages", resource: resource %>
				
				<div class="field">
					<%= f.label :email %><br/>
					<div class="sign-in-input"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></div>
				</div>
				
				<div class="actions reset-btn">
					<%= f.submit "Send me reset password instructions", class: "ui primary button" %>
				</div>
			<% end %>
		</div>
		
		<div class="ui secondary segment">
			<%= render "users/shared/links" %>
		</div>
	</div>
</div>
