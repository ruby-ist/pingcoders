<!DOCTYPE html>
<html>

<head>
	<title>Pingcoders</title>
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<%= csrf_meta_tags %>
	<%= csp_meta_tag %>
	<%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
	<script src="https://cdn.jsdelivr.net/npm/tsparticles/tsparticles.bundle.min.js"></script>
	<%= javascript_importmap_tags %>
</head>

<body>
<header class="navbar">
	<h2>Pingcoders</h2>
	<div class="session-btn">
		<% if !@search %>
			<%= link_to profiles_path, class: "ui blue button ping" do %>
				<i class="search icon"></i> ping
			<% end %>
		<% elsif user_signed_in? %>
			<%= link_to profile_path(current_user.id), class: "ui blue button ping" do %>
				<i class="user icon"></i> profile
			<% end %>
		<% end %>
		<%= link_to "Sign Out", destroy_user_session_path, data: { turbo_method: :delete }, class: "ui negative button" if user_signed_in? %>
		<%= link_to "Sign In", new_user_session_path, method: :get, class: "ui positive button" unless user_signed_in? %>
	</div>

</header>
<% if alert %>
	<div data-controller="toast" data-toast-type-value="alert" data-toast-message-value="<%= alert %>"></div>
<% elsif notice %>
	<div data-controller="toast" data-toast-type-value="notice" data-toast-message-value="<%= notice %>"></div>
<% end %>
<%= yield %>
</body>
</html>
