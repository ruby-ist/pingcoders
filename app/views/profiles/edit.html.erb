<%= turbo_frame_tag "language" do %>
	<div data-controller="dropdown" data-dropdown-type-value="language">
		<div class="ui large header">Language Proficency:</div>
		<ul class="round-boxes">
			<% @user.languages.each do |language| %>
				<li><%= language.name %></li>
			<% end %>
		</ul>
		<%= form_with url: language_path, method: :post do |f| %>
			<div class="input-wrapper">
				<%= f.text_field "name", data: {dropdown_target: "input"}, autocomplete: "off"%>
				<div class="suggestion-box" data-dropdown-target="suggestion"></div>
			</div>
			<%= f.button "Add", class: "ui disabled primary button", data: {dropdown_target: "button"} %>
		<% end %>
	</div>
	<%= link_to "Back", profile_path(@user.id) %>
<% end %>

