<%= turbo_frame_tag "email" do %>
	<div class="ui medium header">Emails:</div>
	<ul>
		<% @user.emails.each do |mail| %>
			<li><%= mail.email %></li>
		<% end %>
		<%= form_with url: profile_path(@user.id), method: :patch do |f| %>
			<%= f.hidden_field "attribute", value: "email" %>
			<%= f.text_field "email" %>
			<br/>
			<%= f.button "save" %>  <%= link_to "Back", profile_path(@user.id) %>
		<% end %>
	</ul>
<% end %>

