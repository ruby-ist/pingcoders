<% @user.companies.each do |company| %>
	<%= turbo_frame_tag dom_id(company) do %>
		<li>
			<div class="inline-edit" style="margin-right: 0"><%= company.role %></div> @ <div class="inline-edit"><%= company.name.capitalize %></div>
			<%= link_to edit_profile_company_path(@user.id, company.id) do %>
				<i class="edit outline blue link icon"></i>
			<% end %>
			<%= link_to "/profiles/#{@user.id}/companies/#{company.id}", data: {turbo_method: :delete } do %>
				<i class="trash alternate outline blue link icon"></i>
			<% end %>
		</li>
	<% end %>
<% end %>