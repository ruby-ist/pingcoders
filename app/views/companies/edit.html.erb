<%= turbo_frame_tag dom_id(@company) do %>
	<%= form_with url: profile_company_path(@profile_id, @company.id), method: :patch do |f| %>
		<div class="lined-input" style="display: block; margin: 10px auto;">
			<li>
				<%= f.text_field "role", value: @company.role, style: "width: max-content", placeholder: "role", autocomplete: "off", required: true %>
				<br/>
				@:&ensp;
				<%= f.text_field "name", value: @company.name, style: "width: max-content", placeholder: "name", autocomplete: "off", required: true %>
				<%= f.button class: "ui compact icon button" do %>
					<i class="save blue icon"></i>
				<% end %>
				<%= link_to new_profile_company_path do %>
					<i class="close blue link icon"></i>
				<% end %>
			</li>
		</div>
	<% end %>
<% end %>