<%= turbo_frame_tag dom_id(@address) do %>
	<%= form_with url: profile_address_path(@profile_id, @address.id), method: :patch do |f| %>
		<div class="lined-input">
			<li>
				<%= f.text_area "address", value: @address.address, placeholder: "Address", autocomplete: "off", required: true %>
				<%= f.button class: "ui compact icon button" do %>
					<i class="save blue icon"></i>
				<% end %>
				<%= link_to new_profile_address_path do %>
					<i class="close blue link icon"></i>
				<% end %>
			</li>
		</div>
	<% end %>
<% end %>